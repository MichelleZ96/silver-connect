<div>
  <div>
    <h1>
      List of all bookmarked jobs
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new bookmarked job
    </h2>

    <form action="/insert_bookmarked_job" method="post">
      <div>
        <label for="applicant_id_box">
          Applicant
        </label>

        <input type="text" id="applicant_id_box" name="query_applicant_id">
      </div>

      <div>
        <label for="job_posting_id_box">
          Job posting
        </label>

        <input type="text" id="job_posting_id_box" name="query_job_posting_id">
      </div>

      <button>
        Create bookmarked job
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Applicant
        </th>

        <th>
          Job posting
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarked_jobs.each do |a_bookmarked_job| %>
      <tr>
        <td>
          <%= a_bookmarked_job.id %>
        </td>

        <td>
          <%= a_bookmarked_job.applicant_id %>
        </td>

        <td>
          <%= a_bookmarked_job.job_posting_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmarked_job.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bookmarked_job.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarked_jobs/<%= a_bookmarked_job.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
