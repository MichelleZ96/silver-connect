<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :name,
                required: true,
                input_html: { autocomplete: "name" } %>
    <%= f.input :age,
                required: true,
                input_html: { autocomplete: "age" } %>  
    <%= f.input :last_experience_company,
                required: true,
                input_html: { autocomplete: "last_experience_company" } %>  
    <%= f.input :last_experience_duration_years,
                required: true,
                input_html: { autocomplete: "last_experience_duration_years" } %> 
    <%= f.input :last_experience_industry,
                required: true,
                input_html: { autocomplete: "last_experience_industry" } %> 
    <%= f.input :last_experience_last_role,
                required: true,
                input_html: { autocomplete: "last_experience_last_role" } %> 
    <%= f.input :interested_industry_1,
                required: true,
                input_html: { autocomplete: "interested_industry_1" } %> 
    <%= f.input :interested_industry_2,
                required: true,
                input_html: { autocomplete: "interested_industry_2" } %> 
    <%= f.input :interested_industry_3,
                required: true,
                input_html: { autocomplete: "interested_industry_3" } %> 
    <%= f.input :interested_role_1,
                required: true,
                input_html: { autocomplete: "interested_role_1" } %> 
    <%= f.input :interested_role_2,
                required: true,
                input_html: { autocomplete: "interested_role_2" } %> 
    <%= f.input :interested_role_3,
                required: true,
                input_html: { autocomplete: "interested_role_3" } %> 
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "applicants/shared/links" %>
